<% title "User" %>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>Password Hash:</strong>
  <%= @user.password_hash %>
</p>
<p>
  <strong>Salt:</strong>
  <%= @user.salt %>
</p>
<p>
  <strong>Instance:</strong>
  <%= @user.instance_id %>
</p>

<p>
  <%= link_to "Edit", edit_user_path(@user) %> |
  <%= link_to "Destroy", @user, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", users_path %>
</p>
